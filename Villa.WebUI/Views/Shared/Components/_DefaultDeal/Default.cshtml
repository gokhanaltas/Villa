@model List<ResultDealDto>

@{
    // Kategorilere göre gruplayalım
    var apartmanlar = Model.Where(x => x.Type == "Apartman Dairesi").ToList();
    var mustakil = Model.Where(x => x.Type == "Müstakil").ToList();
    var catikati = Model.Where(x => x.Type == "Çatı Katı").ToList();
}

<div class="section best-deal">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="section-heading">
                    <h6>| En İyi Tekliflerimiz</h6>
                    <h2>İstediğiniz Türde Villalarımızı İnceleyin.</h2>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="tabs-content">
                    <div class="row">
                        <!-- Sekmeler -->
                        <div class="nav-wrapper">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="apartman-tab" data-bs-toggle="tab" data-bs-target="#apartman" type="button" role="tab" aria-controls="apartman" aria-selected="true">
                                        Apartman Dairesi
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="mustakil-tab" data-bs-toggle="tab" data-bs-target="#mustakil" type="button" role="tab" aria-controls="mustakil" aria-selected="false">
                                        Müstakil
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="catikati-tab" data-bs-toggle="tab" data-bs-target="#catikati" type="button" role="tab" aria-controls="catikati" aria-selected="false">
                                        Çatı Katı
                                    </button>
                                </li>
                            </ul>
                        </div>

                        <!-- Sekme İçerikleri -->
                        <div class="tab-content" id="myTabContent">

                            <!-- Apartman Dairesi -->
                            <div class="tab-pane fade show active" id="apartman" role="tabpanel" aria-labelledby="apartman-tab">
                                @if (apartmanlar.Any())
                                {
                                    foreach (var item in apartmanlar)
                                    {
                                        <div class="row mt-4">
                                            <div class="col-lg-3">
                                                <div class="info-table">
                                                    <ul>
                                                        <li>Metrekare Bilgisi <span>@($"{item.Square} m²")</span></li>
                                                        <li>Bulunduğu Kat <span>@item.Floor</span></li>
                                                        <li>Oda Sayısı <span>@item.RoomCount</span></li>
                                                        <li>Park Alanı <span>@(item.HasParkingArea ? "Var" : "Yok")</span></li>
                                                        <li>Ödeme Türü <span>@item.PaymentType</span></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <img src="@item.ImageUrl" alt="@item.Title" class="img-fluid rounded">
                                            </div>
                                            <div class="col-lg-3">
                                                <h4>@item.Title</h4>
                                                <p>@item.Description</p>
                                                <div class="icon-button">
                                                    <a href="#"><i class="fa fa-calendar"></i> Ziyaret Planlayın</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="mt-3">Apartman dairesi seçeneği bulunmamaktadır.</p>
                                }
                            </div>

                            <!-- Müstakil -->
                            <div class="tab-pane fade" id="mustakil" role="tabpanel" aria-labelledby="mustakil-tab">
                                @if (mustakil.Any())
                                {
                                    foreach (var item in mustakil)
                                    {
                                        <div class="row mt-4">
                                            <div class="col-lg-3">
                                                <div class="info-table">
                                                    <ul>
                                                        <li>Metrekare Bilgisi <span>@($"{item.Square} m²")</span></li>
                                                        <li>Bulunduğu Kat <span>@item.Floor</span></li>
                                                        <li>Oda Sayısı <span>@item.RoomCount</span></li>
                                                        <li>Park Alanı <span>@(item.HasParkingArea ? "Var" : "Yok")</span></li>
                                                        <li>Ödeme Türü <span>@item.PaymentType</span></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <img src="@item.ImageUrl" alt="@item.Title" class="img-fluid rounded">
                                            </div>
                                            <div class="col-lg-3">
                                                <h4>@item.Title</h4>
                                                <p>@item.Description</p>
                                                <div class="icon-button">
                                                    <a href="#"><i class="fa fa-calendar"></i> Ziyaret Planlayın</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="mt-3">Müstakil seçenek bulunmamaktadır.</p>
                                }
                            </div>

                            <!-- Çatı Katı -->
                            <div class="tab-pane fade" id="catikati" role="tabpanel" aria-labelledby="catikati-tab">
                                @if (catikati.Any())
                                {
                                    foreach (var item in catikati)
                                    {
                                        <div class="row mt-4">
                                            <div class="col-lg-3">
                                                <div class="info-table">
                                                    <ul>
                                                        <li>Metrekare Bilgisi <span>@($"{item.Square} m²")</span></li>
                                                        <li>Bulunduğu Kat <span>@item.Floor</span></li>
                                                        <li>Oda Sayısı <span>@item.RoomCount</span></li>
                                                        <li>Park Alanı <span>@(item.HasParkingArea ? "Var" : "Yok")</span></li>
                                                        <li>Ödeme Türü <span>@item.PaymentType</span></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <img src="@item.ImageUrl" alt="@item.Title" class="img-fluid rounded">
                                            </div>
                                            <div class="col-lg-3">
                                                <h4>@item.Title</h4>
                                                <p>@item.Description</p>
                                                <div class="icon-button">
                                                    <a href="#"><i class="fa fa-calendar"></i> Ziyaret Planlayın</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="mt-3">Çatı katı seçeneği bulunmamaktadır.</p>
                                }
                            </div>

                        </div> <!-- tab-content end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
